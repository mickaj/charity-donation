@model RegisterInputModel

<section id="login-section" class="login-page">
    <h2>@Localizer["signOnLine"]</h2>
    <form asp-controller="Account" asp-action="Register"
          data-ajax="true"
          data-ajax-method="POST"
          data-ajax-complete="replaceContent(xhr, 'login-section'); reloadNavi('navi')">
        <div class="form-group">
            <input asp-for="Email" placeholder="@Localizer["emailLabel"]" />
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="@Localizer["passwordLabel"]" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" placeholder="@Localizer["repeatPasswordLabel"]" />
        </div>
        <div class="form-group" asp-validation-summary="All"></div>

        <div class="form-group form-group--buttons">
            <a asp-controller="Account" asp-action="Login" class="btn btn--without-border">@Localizer["loginButton"]</a>
            <button class="btn" type="submit">@Localizer["signOnButton"]</button>
        </div>
    </form>
</section>

