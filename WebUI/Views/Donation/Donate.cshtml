@model DonationFormModel

<section class="form--steps">
    <div class="form--steps-instructions">
        <div class="form--steps-container">
            <h3>@Localizer["importantExclamation"]</h3>
            <p data-step="1" class="active">
                @Localizer["fillDetailsForm"]
            </p>
            <p data-step="2">
                @Localizer["fillDetailsForm"]
            </p>
            <p data-step="3">
                @Localizer["pickOneInstitutionForm"]
            </p>
            <p data-step="4">@Localizer["collectionDetailsForm"]</p>
        </div>
    </div>

    <div class="form--steps-container">
        <div class="form--steps-counter">Krok <span>1</span>/4</div>

        <form id="donation-form" action="#" method="post">
            <!-- STEP 1: class .active is switching steps -->
            <div data-step="1" class="active">
                <h3>@Localizer["tickCategory"]</h3>

                <div id="categories-checkbox-group">
                    @foreach (var cat in Model.AvailableCategories)
                    {
                        <div class="form-group form-group--checkbox">
                            <label>
                                <input type="checkbox" class="category-item"
                                       name="categories"
                                       value="@cat.Category.Id"
                                       checked="@cat.IsChecked" />
                                <span class="checkbox"></span>
                                <span class="description">@cat.Category.Name</span>
                            </label>
                        </div>
                    }
                    <div id="category-error-message" class="d-none">
                        <ul>
                            <li>
                                @Localizer["pickAtLeastOneCategory"]
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="form-group form-group--buttons">
                    <button id="step-1-next" type="button" class="btn next-step">@Localizer["nextButton"]</button>
                </div>
            </div>


            <!-- STEP 2 -->
            <div data-step="2">
                <h3>@Localizer["provideNumberOfBags"]</h3>

                <div class="form-group form-group--inline">
                    <label>
                        @Localizer["numberOfBags"]
                        <input asp-for="NumberOfBags" min="@Model.MinNumberOfBags" />
                    </label>
                </div>

                <div id="bags-error-message" class="d-none">
                    <ul>
                        <li>
                            @Localizer["oneBagMin"]
                        </li>
                    </ul>
                </div>

                <partial name="_FormButtonsPartial">

            </div>


            <!-- STEP 3 -->
            <div data-step="3">
                <h3>@Localizer["chooseInstitutionYouWantToHelp"]</h3>
                <div id="institution-checkbox-group">
                    @foreach (var institution in Model.AvaiilableInstitutions)
                    {
                        <div class="form-group form-group--checkbox">
                            <label>
                                <input class="institution-item" name="SelectedInstitutionId" type="radio" value="@institution.Id" />
                                <span class="checkbox radio"></span>
                                <span class="description">
                                    <div class="title">@institution.Name</div>
                                    <div class="subtitle">
                                        @institution.Description
                                    </div>
                                </span>
                            </label>
                        </div>
                    }
                    <div id="institution-error-message" class="d-none">
                        <ul>
                            <li>
                                @Localizer["pickOneInstitution"]
                            </li>
                        </ul>
                    </div>
                </div>

                <partial name="_FormButtonsPartial">

            </div>


            <!-- STEP 4 -->
            <div data-step="4">
                <h3>@Localizer["provideAddress"]</h3>

                <div class="form-section form-section--columns">
                    <div class="form-section--column">
                        <h4>@Localizer["address"]</h4>
                        <div class="form-group form-group--inline">
                            <label> @Localizer["street"] <input type="text" name="address" /> </label>
                        </div>

                        <div class="form-group form-group--inline">
                            <label> @Localizer["city"] <input type="text" name="city" /> </label>
                        </div>

                        <div class="form-group form-group--inline">
                            <label>
                                @Localizer["zipCode"] <input type="text" name="postcode" />
                            </label>
                        </div>

                        <div class="form-group form-group--inline">
                            <label> @Localizer["phoneNumber"] <input type="text" name="phone" /></label>
                        </div>
                    </div>

                    <div class="form-section--column">
                        <h4>@Localizer["collectionDate"]</h4>
                        <div class="form-group form-group--inline">
                            <label> @Localizer["date"] <input type="date" name="data" /> </label>
                        </div>

                        <div class="form-group form-group--inline">
                            <label> @Localizer["time"] <input type="time" name="time" /> </label>
                        </div>

                        <div class="form-group form-group--inline">
                            <label>
                                @Localizer["collectionNotes"]
                                <textarea name="more_info" rows="5"></textarea>
                            </label>
                        </div>
                    </div>
                </div>

                <partial name="_FormButtonsPartial">

            </div>


